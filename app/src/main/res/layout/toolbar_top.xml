<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#109f8d"
    android:layout_gravity="top"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/iv_back_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:minEms="3"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_back_toolbar"
        android:textStyle="bold"
        android:gravity="center|start"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="match_parent"
        android:text="Các câu hay sai"
        android:maxLines="1"
        android:textAllCaps="true"
        android:id="@+id/tv_title"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_17ssp"
        />
    <TextView
        android:id="@+id/tv_end_toolbar"
        android:layout_toLeftOf="@id/iv_add_toolbar"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="NỘP BÀI"
        android:textColor="#ffffff"
        android:textSize="@dimen/_13ssp"
        />

    <ImageView
        android:id="@+id/iv_add_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_add" />

</RelativeLayout>