<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/cst_background"
        android:padding="@dimen/_20sdp"
        >
        <TextView
            android:id="@+id/tv_lesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đề 1"
            android:textColor="#123"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/tv_content_dialog"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pre_start_lesson"
            android:textColor="#646465"
            android:textSize="@dimen/_13ssp"
            android:lineSpacingExtra="@dimen/_5sdp"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/tv_ok_start"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="#4CAF50"
                android:text="Làm bài"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/bt_close_start"
                android:textColor="#ffffff"
                android:text="Hủy"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cst_bt_close"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>